<div class="row">
  <div class="col s12">
    <% if logged_in? %> <!-- Assuming you have a helper method to check login status -->
      <div class="right-align">
        <%= link_to 'Logout', logout_path %> <!-- Modify here if using get method -->
      </div>
    <% else %>
      <div class="col s7">
        <div class="card yellow lighten-4">
          <div class="card-content">
            <span class="card-title">Login here</span>
            <br />
            <%= form_with url: sessions_path, local: true do |f| %>
              <div class="control-group">
                <%= f.label :username %>
                <div class="controls">
                  <%= f.text_field :username %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :password %>
                <div class="controls">
                  <%= f.password_field :password %>
                </div>
              </div>
              
              <div class="actions">
                <%= f.submit "Log In" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
