<!DOCTYPE html>
<html>
  <head>
    <title>GCPD Management System</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Bitter|Josefin+Sans|Nunito|Varela+Round" %>
    <%= javascript_pack_tag "application" %>
  </head>

  <body>
    <header>


    </header>
    <main>
      <% if logged_in? %>
        <%= link_to 'Investigations', investigations_path %>
        <%= link_to 'Officers', officers_path %>
        <%= link_to 'Units', units_path %>
        <% if session[:officer_id] %>
          <%= link_to 'Logout', logout_path %>
        <% end %>
      <% end %>

      <% flash.each do |key, value| %>
        <div class="<%= key %>"><%= value %></div>
      <% end %>

      <%= yield %>

    </main>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>   
  </body>

  <footer>
    <p>Webmaster: Amanda Lu</p>
  </footer>
</html>